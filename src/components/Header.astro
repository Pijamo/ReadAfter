---
const categories = [
  { name: 'Fiction', slug: 'fiction' },
  { name: 'Self-Help', slug: 'self-help' },
  { name: 'Business', slug: 'business' },
  { name: 'Technology', slug: 'technology' },
  { name: 'Indian Authors', slug: 'indian-authors' },
  { name: 'Mythology', slug: 'mythology' },
  { name: 'Exam Prep', slug: 'exam-prep' },
];
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="flex items-center gap-2 text-xl font-bold text-primary-700">
        <span>ReadAfter</span>
      </a>
      <nav class="hidden md:flex items-center gap-6 text-sm font-medium text-gray-600">
        <a href="/books/" class="hover:text-primary-600 transition-colors">All Books</a>
        <a href="/blog/" class="hover:text-primary-600 transition-colors">Blog</a>
        <a href="/about" class="hover:text-primary-600 transition-colors">About</a>
      </nav>
      <button id="mobile-menu-btn" class="md:hidden p-2 text-gray-600" aria-label="Toggle menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
  <!-- Category bar -->
  <div class="border-t border-gray-100 overflow-x-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex gap-4 py-2 text-sm text-gray-500 whitespace-nowrap">
        {categories.map((cat) => (
          <a href={`/category/${cat.slug}/`} class="hover:text-primary-600 transition-colors">{cat.name}</a>
        ))}
      </div>
    </div>
  </div>
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-100 bg-white">
    <div class="px-4 py-3 space-y-2">
      <a href="/books/" class="block py-2 text-gray-700">All Books</a>
      <a href="/blog/" class="block py-2 text-gray-700">Blog</a>
      <a href="/about" class="block py-2 text-gray-700">About</a>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
</script>
